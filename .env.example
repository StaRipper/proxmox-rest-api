# ======================================
# Proxmox Server Connection
# ======================================
PROXMOX_HOST=192.168.1.100
PROXMOX_PORT=8006
PROXMOX_USER=root@pam
PROXMOX_TOKEN_NAME=mcp-server
PROXMOX_TOKEN_VALUE=your-token-secret-here

# ======================================
# Security & Permissions
# ======================================
# SSL Verification (true/false)
PROXMOX_VERIFY_SSL=false

# Allow elevated operations (command execution, detailed metrics)
# Set to 'true' only if token has Sys.Audit, VM.Monitor, VM.Console permissions
PROXMOX_ALLOW_ELEVATED=false

# ======================================
# API Server Configuration
# ======================================
PORT=3000
NODE_ENV=production
